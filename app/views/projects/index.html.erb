<html>
	<ul>
		<% @projects.each do |project| %>
			<% if project.description.present? %>
				<li><b><a href=<%= "/projects/#{project.id}" %>><%= project.name %></a></b>
				<i><%= " - #{project.description}" %></i></li>
			<% else %>
				<li><b><a href=<%= "/projects/#{project.id}" %>><%= project.name %></a></b>
			
			<% end %>
		<% end %>
	</ul>

</html>
