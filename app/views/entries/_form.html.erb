<%= form_for [@project, @entry] do |f| %>
	<%= f.label :hours %>
	<%= f.text_field :hours %>
	<br>
	<%= f.label :minutes %>
	<%= f.text_field :minutes %>
	<br>
	<%= f.label :date %>
	<%= f.date_field :date %>
	<br>
	<%= f.submit "Save" %>
	<%= link_to("Cancel", project_entries_path) %>
<% end %>


	<% if @entry.errors.any? %>
		<% if flash[:error] %>
  			<%= flash[:error] %>
	 	<% end %> 
		<ul>
			<% @entry.errors.full_messages.each do |error_msg| %>
			  <li><%= error_msg %></li>
			  <% end %>
		</ul>
	<% end %>
		